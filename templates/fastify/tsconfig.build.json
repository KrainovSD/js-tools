{
  "extends": "@krainovsd/presets/typescript/common-build",
  "compilerOptions": {
    "outDir": "tmp",
    "paths": {
      "@/*": ["./src/*"]
    },
    "baseUrl": "./",
    "plugins": [{ "transform": "typescript-transform-paths", "afterDeclarations": true }]
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts"]
}
