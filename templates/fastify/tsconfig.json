{
  "compilerOptions": {
    "target": "ES2023",
    "useDefineForClassFields": true,
    "lib": ["ES2023"],
    "types": ["node"],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": true,
    "verbatimModuleSyntax": true,
    /* Linting */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "baseUrl": "./",
    "outDir": "./tmp",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "./src/type.d.ts", "eslint.config.js", "jest.config.js"],
  "exclude": ["node_modules"]
}
