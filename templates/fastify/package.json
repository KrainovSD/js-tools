{
  "name": "@krainovsd/template-fastify",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "nodemon",
    "clear": "rm -rf ./dist",
    "build": "npm run clear && npm run build:types &&  npm run build:js",
    "build:js": "swc src --out-dir dist --config-file .swcrc.build",
    "build:types": "tsc -p tsconfig.build.json",
    "lint": "eslint . -c ./eslint.config.mjs --color --max-warnings 0",
    "lint-check": "eslint --debug eslint.config.js",
    "format": "prettier --write 'src/**/*.{js,ts,tsx,scss,css,json}'",
    "format-check": "prettier --check ./src",
    "lint-debug": "npx eslint --print-config eslint.config.js > eslint-config-rules.json",
    "type-debug": "tsc --showConfig > typescript-config.json",
    "test": "jest",
    "test-coverage": "jest --coverage"
  },
  "dependencies": {
    "@krainovsd/fastify-logger": "0.3.3",
    "@krainovsd/js-helpers": "0.16.6",
    "@krainovsd/fastify-health-controller": "0.3.2",
    "@krainovsd/fastify-trace": "0.0.5",
    "dotenv": "16.4.7",
    "fastify": "5.4.0",
    "@fastify/cors": "11.0.1",
    "@gquittet/graceful-server": "5.2.13",
    "@fastify/awilix": "8.0.0",
    "awilix": "12.0.5",
    "lodash": "4.17.21",
    "@fastify/swagger": "9.5.1",
    "@fastify/swagger-ui": "5.2.3",
    "@fastify/cookie": "11.0.2",
    "prom-client": "15.1.3"
  },
  "devDependencies": {
    "@krainovsd/presets": "0.3.6",
    "rollup": "4.34.9",
    "prettier": "3.6.1",
    "eslint": "9.29.0",
    "typescript": "5.8.3",
    "@swc/cli": "0.6.0",
    "@swc/core": "1.11.5",
    "@types/node": "22.13.8",
    "@swc/jest": "0.2.37",
    "@types/jest": "29.5.14",
    "jest": "29.7.0",
    "nodemon": "3.1.9",
    "@types/json-schema": "7.0.15",
    "@types/lodash": "4.17.14",
    "@trivago/prettier-plugin-sort-imports": "5.2.2"
  }
}
