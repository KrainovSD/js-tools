{
  "extends": "@krainovsd/presets/typescript/common",

  "compilerOptions": {
    "types": ["node"],
    "paths": {
      "@/*": ["./src/*"]
    },
    "baseUrl": "./",
    "moduleDetection": "force",
    "allowJs": true,
    "checkJs": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.svelte",
    "eslint.config.js",
    "src/typings.d.ts",
    "rollup.config.ts",
    "rollup-singleton.config.ts",
    ".prettierrc.mjs",
    "svelte.config.js"
  ],
  "exclude": ["node_modules", "dist"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
